<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item
		android:state_enabled="false">
		<shape android:shape="rectangle">
			<solid android:color="@color/amber_light"/>
		</shape>
	</item>
	<item>
		<ripple
			android:color="?colorControlHighlight">
