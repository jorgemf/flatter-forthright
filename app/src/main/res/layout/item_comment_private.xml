<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/space_normal">

	<TextView
		android:id="@+id/comment"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginTop="@dimen/space_small"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="@color/black_light"
		tools:text="This is the comment of a user of multiple lines. There is no too much to say here, it is only an example of how it will be displayed in the screen."/>

	<TextView
		android:id="@+id/comment_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_below="@id/comment"
		android:layout_marginTop="@dimen/space_small"
		android:textAppearance="?android:attr/textAppearanceSmall"
		tools:text="2 hours ago"/>

	<ProgressBar
		android:id="@+id/progress_bar"
		style="?android:attr/progressBarStyleSmall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/comment"
		android:layout_marginTop="@dimen/space_small"
		android:visibility="gone"
		tools:visibility="visible"/>

	<TextView
		android:id="@+id/sending_comment_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/comment"
		android:layout_marginLeft="@dimen/space_small"
		android:layout_marginStart="@dimen/space_small"
		android:layout_marginTop="@dimen/space_small"
		android:layout_toEndOf="@id/progress_bar"
		android:layout_toRightOf="@id/progress_bar"
		android:text="@string/sending_comment"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:visibility="gone"
		tools:visibility="visible"/>

</RelativeLayout>