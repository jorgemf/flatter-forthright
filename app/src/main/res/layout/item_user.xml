<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/clickable_container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?android:attr/selectableItemBackground"
	android:padding="@dimen/space_normal">

	<ImageView
		android:id="@+id/user_image"
		android:layout_width="@dimen/item_user_image_size"
		android:layout_height="@dimen/item_user_image_size"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		/>

	<ImageView
		android:id="@+id/user_favorite"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		/>

	<TextView
		android:id="@+id/user_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:layout_toEndOf="@id/user_image"
		android:layout_toLeftOf="@id/user_favorite"
		android:layout_toRightOf="@id/user_image"
		android:layout_toStartOf="@id/user_favorite"
		android:maxLines="1"
		android:text="@string/lorem_ipsum"
		android:textAppearance="?android:attr/textAppearanceMedium"/>

	<TextView
		android:id="@+id/user_phone"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:layout_below="@id/user_name"
		android:layout_marginTop="@dimen/space_small"
		android:layout_alignLeft="@id/user_name"
		android:layout_alignRight="@id/user_name"
		android:lines="1"
		android:text="@string/lorem_ipsum"
		android:textAppearance="?android:attr/textAppearanceSmall"/>

</RelativeLayout>