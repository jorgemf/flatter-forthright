<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/space_normal"
	xmlns:card_view="http://schemas.android.com/apk/res-auto">

	<ImageView
		android:id="@+id/user_image"
		android:layout_width="@dimen/item_comment_user_image_size"
		android:layout_height="@dimen/item_comment_user_image_size"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginEnd="@dimen/space_small"
		android:layout_marginRight="@dimen/space_small"
		android:layout_marginTop="@dimen/space_normal"
		android:src="@color/darker"/>

	<android.support.v7.widget.CardView
		android:id="@+id/card_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginEnd="@dimen/space_large"
		android:layout_marginRight="@dimen/space_large"
		android:layout_toEndOf="@id/user_image"
		android:layout_toRightOf="@id/user_image"
		card_view:cardCornerRadius="@dimen/comment_card_radius">

		<include layout="@layout/item_comment"/>
	</android.support.v7.widget.CardView>

</RelativeLayout>
