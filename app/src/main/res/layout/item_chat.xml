<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/clickable_container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?android:attr/selectableItemBackground"
	android:padding="@dimen/space_large">

	<ImageView
		android:id="@+id/user_image"
		android:layout_width="@dimen/item_user_image_size"
		android:layout_height="@dimen/item_user_image_size"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginEnd="@dimen/space_large"
		android:layout_marginRight="@dimen/space_large"
		android:src="@drawable/ic_account_circle_white_48dp"
		tools:ignore="ContentDescription"/>

	<com.livae.ff.app.view.AnonymousImage
		android:id="@+id/anonymous_image"
		android:layout_width="@dimen/item_user_image_size"
		android:layout_height="@dimen/item_user_image_size"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginEnd="@dimen/space_large"
		android:layout_marginRight="@dimen/space_large"
		tools:visibility="gone"/>

	<TextView
		android:id="@+id/anonymous_mark"
		android:layout_width="@dimen/item_user_image_size"
		android:layout_height="@dimen/item_user_image_size"
		android:gravity="center"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:text="\?"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="@color/black"
		android:textSize="28sp"
		tools:ignore="HardcodedText"/>

	<ImageView
		android:id="@+id/secret_mark"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/title"
		android:layout_marginTop="@dimen/space_tiny"
		android:layout_toEndOf="@id/user_image"
		android:layout_toRightOf="@id/user_image"
		android:src="@drawable/ic_timer_black_24dp"/>

	<TextView
		android:id="@+id/user_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:layout_marginEnd="@dimen/space_normal"
		android:layout_marginRight="@dimen/space_normal"
		android:layout_marginTop="@dimen/space_tiny"
		android:layout_toEndOf="@id/user_image"
		android:layout_toRightOf="@id/user_image"
		android:maxLines="1"
		android:maxWidth="120dp"
		android:textAppearance="?android:attr/textAppearanceMedium"
		tools:text="User Name"/>

	<TextView
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:layout_toEndOf="@id/user_name"
		android:layout_toRightOf="@id/user_name"
		android:maxLines="1"
		android:textAppearance="?android:attr/textAppearanceLarge"
		tools:text="Title"/>

	<TextView
		android:id="@+id/date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_below="@id/title"
		android:layout_marginLeft="@dimen/space_normal"
		android:layout_marginStart="@dimen/space_normal"
		android:layout_marginTop="@dimen/space_normal"
		android:lines="1"
		android:paddingTop="@dimen/space_tiny"
		android:textAppearance="?android:attr/textAppearanceSmall"
		tools:text="12:35"/>

	<TextView
		android:id="@+id/subtitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:layout_below="@id/title"
		android:layout_marginTop="@dimen/space_normal"
		android:layout_toEndOf="@id/user_image"
		android:layout_toLeftOf="@id/date"
		android:layout_toRightOf="@id/user_image"
		android:layout_toStartOf="@id/date"
		android:lines="1"
		android:textAppearance="?android:attr/textAppearanceMedium"
		tools:text="Example of a message"/>

</RelativeLayout>