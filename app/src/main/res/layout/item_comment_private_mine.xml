<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:card_view="http://schemas.android.com/apk/res-auto">

	<View
		android:id="@+id/extra_padding"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/space_normal"
		android:layout_alignParentTop="true"/>

	<View
		android:id="@+id/comment_arrow"
		android:layout_width="@dimen/space_large"
		android:layout_height="@dimen/space_large"
		android:background="@color/amber_light"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_below="@id/extra_padding"
		android:layout_marginTop="@dimen/comment_card_radius"
		android:rotation="45"/>

	<android.support.v7.widget.CardView
		android:id="@+id/card_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:elevation="@dimen/space_small"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_below="@id/extra_padding"
		android:layout_marginBottom="@dimen/space_tiniest"
		android:layout_marginEnd="@dimen/space_normal"
		android:layout_marginLeft="@dimen/space_huge"
		android:layout_marginRight="@dimen/space_normal"
		android:layout_marginStart="@dimen/space_huge"
		android:layout_marginTop="@dimen/space_tiniest"
		card_view:cardBackgroundColor="@color/amber_light"
		card_view:cardCornerRadius="@dimen/comment_card_radius">

		<include layout="@layout/item_comment_private"/>
	</android.support.v7.widget.CardView>

</RelativeLayout>
