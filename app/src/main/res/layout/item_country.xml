<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/space_press"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:paddingLeft="@dimen/space_normal"
	android:paddingRight="@dimen/space_normal">

	<ImageView
		android:id="@+id/flag_icon"
		android:layout_width="@dimen/item_flag_size"
		android:layout_height="@dimen/item_flag_size"
		android:layout_marginEnd="@dimen/space_normal"
		android:layout_marginRight="@dimen/space_normal"
		android:scaleType="fitCenter"
		android:src="@drawable/flag_es"
		tools:ignore="ContentDescription"/>

	<TextView
		android:id="@+id/country_text"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:lines="1"
		android:text="@string/lorem_ipsum"
		android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>