<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
	<filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>SystemServiceServlet</servlet-name>
		<servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
		<init-param>
			<param-name>services</param-name>
			<param-value>
				com.livae.ff.api.v1.ApiEndpoint, <!--com.livae.ff.api.v1.AdminEndpoint,-->
			</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>SystemServiceServlet</servlet-name>
		<url-pattern>/_ah/spi/*</url-pattern>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>

	<!-- web pages -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<!-- cron jobs -->
	<servlet>
		<servlet-name>SendStatsEmailServlet</servlet-name>
		<servlet-class>com.livae.ff.api.servlet.SendStatsEmailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SendStatsEmailServlet</servlet-name>
		<url-pattern>/sendstatsemail</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ForgetFlaggedUsersServlet</servlet-name>
		<servlet-class>com.livae.ff.api.servlet.ForgetFlaggedUsersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ForgetFlaggedUsersServlet</servlet-name>
		<url-pattern>/fogetflaggedusers</url-pattern>
	</servlet-mapping>

	<!-- queues -->
	<servlet>
		<servlet-name>CreateCommentWorkerServlet</servlet-name>
		<servlet-class>com.livae.apphunt.api.servlet.worker.CreateCommentNotificationWorkerServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateCommentWorkerServlet</servlet-name>
		<url-pattern>/createcommentworker</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SendPushCommentNotificationWorkerServlet</servlet-name>
		<servlet-class>com.livae.apphunt.api.servlet.worker.SendPushNotificationWorkerServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SendPushCommentNotificationWorkerServlet</servlet-name>
		<url-pattern>/sendpushcommentnotificationworker</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ForgetFlaggedUsersWorkerServlet</servlet-name>
		<servlet-class>com.livae.apphunt.api.servlet.worker.ForgetFlaggedUsersWorkerServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ForgetFlaggedUsersWorkerServlet</servlet-name>
		<url-pattern>/forgetflaggedusersworker</url-pattern>
	</servlet-mapping>

	<!-- other configuration -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Entire Application</web-resource-name>
			<url-pattern>/api/*</url-pattern>
			<url-pattern>/_ah/*</url-pattern>
		</web-resource-collection>

		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
</web-app>